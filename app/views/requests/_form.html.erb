<%= simple_form_for(@request) do |f| %>
  <%= f.error_notification %>

  <div class="inputs">
    <%= f.association :user  %>
    
    <%= f.input :title %>
    <%= f.input :body %>
    <%= f.input :mode %>
    <%= f.input :date %>
  </div>

  <div class="actions">
    <%= f.button :submit %>
  </div>
<% end %>
